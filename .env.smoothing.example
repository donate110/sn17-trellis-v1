# Mesh Smoothing Configuration Examples

# === DISABLED (fastest) ===
ENABLE_MESH_SMOOTHING=false

# === LIGHT SMOOTHING (balanced) ===
ENABLE_MESH_SMOOTHING=true
SMOOTHING_ITERATIONS=1
SMOOTHING_STRENGTH=0.3
ENABLE_NORMAL_REFINEMENT=true

# === MEDIUM SMOOTHING (recommended) ===
ENABLE_MESH_SMOOTHING=true
SMOOTHING_ITERATIONS=2
SMOOTHING_STRENGTH=0.5
ENABLE_NORMAL_REFINEMENT=true

# === HEAVY SMOOTHING (smoothest, slower) ===
ENABLE_MESH_SMOOTHING=true
SMOOTHING_ITERATIONS=3
SMOOTHING_STRENGTH=0.7
ENABLE_NORMAL_REFINEMENT=true

# === ULTRA SMOOTHING (maximum quality) ===
ENABLE_MESH_SMOOTHING=true
SMOOTHING_ITERATIONS=5
SMOOTHING_STRENGTH=0.8
ENABLE_NORMAL_REFINEMENT=true

# Output formats (controls what Trellis generates)
# Options: gaussian, mesh, radiance_field
TRELLIS_OUTPUT_FORMATS=["gaussian", "mesh"]
